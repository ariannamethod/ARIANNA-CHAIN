# Example environment configuration for ARIANNA-CHAIN
# Copy this file to `.env` and adjust values as needed.

# OpenAI API key (required)
OPENAI_API_KEY=your_openai_api_key

# Optional base URL for OpenAI API
OPENAI_BASE_URL=

# Token for authenticating requests to the Arianna server (optional)
ARIANNA_SERVER_TOKEN=your_secret_token

# URLs to the Arianna server endpoints
ARIANNA_SERVER_URL=http://127.0.0.1:8000/generate
ARIANNA_SERVER_SSE_URL=http://127.0.0.1:8000/generate_sse

# Telegram bot token
TELEGRAM_TOKEN=your_telegram_token

# Model configuration
ARIANNA_MODEL=gpt-4.1
ARIANNA_MODEL_LIGHT=
ARIANNA_MODEL_HEAVY=
HEAVY_TRIGGER_TOKENS=3500
HEAVY_HINTS=deep analysis;докажи;пошагово;reason;рефлексия

# Runtime limits and cache
PROMPT_LIMIT_CHARS=16000
CACHE_TTL_SECONDS=120
CACHE_MAX_ITEMS=256
SCHEMA_VERSION=1.3
RATE_CAPACITY=20
RATE_REFILL_PER_SEC=0.5
RATE_STATE_TTL=3600
RATE_STATE_CLEANUP=1000
SSE_HEARTBEAT_EVERY=10
SSE_TIME_HEARTBEAT_SEC=12
CODE_BLOCK_LIMIT=65536
SIMHASH_HAMMING_THR=3
PORT=8000

# Embedding and monitoring
ARIANNA_DISABLE_EMBED=
ARIANNA_SNAPSHOT_CODEBASE=0
ARIANNA_EMBED_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Chain execution limits
ARIANNA_MAX_TOKENS=3000
ARIANNA_LAST_USAGE_SUMMARY_TOKENS=8000
